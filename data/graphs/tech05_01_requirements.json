    {
      "id": "req:001",
      "type": "Requirement",
      "label": "REQ-001: Logging Enablement",
      "props": {
        "text": "Logging must be enabled to capture activity on all platforms",
        "mandatory": true
      }
    },
    {
      "id": "req:002",
      "type": "Requirement",
      "label": "REQ-002: Log Classification",
      "props": {
        "text": "Logs must be classified per TECH02.01",
        "mandatory": true
      }
    },
    {
      "id": "req:003",
      "type": "Requirement",
      "label": "REQ-003: Retention Period",
      "props": {
        "text": "Security and Audit Logs retained for at least 12 months, 3 months online",
        "mandatory": true
      }
    },
    {
      "id": "req:006",
      "type": "Requirement",
      "label": "REQ-006: Time Synchronization",
      "props": {
        "text": "System clocks must enable time synchronization",
        "mandatory": true
      }
    },
    {
      "id": "req:007",
      "type": "Requirement",
      "label": "REQ-007: Timestamp with Timezone",
      "props": {
        "text": "Logs must include accurate timestamp with time zone identification",
        "mandatory": true
      }
    },
    {
      "id": "req:009",
      "type": "Requirement",
      "label": "REQ-009: Central Repository",
      "props": {
        "text": "Logs must be forwarded to a central repository",
        "mandatory": true
      }
    },
    {
      "id": "req:010",
      "type": "Requirement",
      "label": "REQ-010: Log Integrity",
      "props": {
        "text": "Logs must be protected from unauthorized modification or deletion",
        "mandatory": true
      }
    },
    {
      "id": "req:011",
      "type": "Requirement",
      "label": "REQ-011: Access Control",
      "props": {
        "text": "Logs must be restricted to authorized users",
        "mandatory": true
      }
    },
    {
      "id": "req:013",
      "type": "Requirement",
      "label": "REQ-013: Required Attributes",
      "props": {
        "text": "Event records must include timestamp, event type, identity, source ID, severity, outcome, session ID, etc.",
        "mandatory": true
      }
    },
